<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:background="@android:color/background_light"
    android:orientation="vertical"
    android:gravity="center">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_marginBottom="42dp"/>

    <LinearLayout
        android:padding="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <ImageView
            android:src="@drawable/logo_colors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_weight="65">

   <LinearLayout
       android:gravity="center_horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <androidx.cardview.widget.CardView
           android:id="@+id/profile_card_view"
           app:cardCornerRadius="12dp"
           android:layout_width="110dp"
           android:layout_height="110dp"
           android:layout_marginRight="45dp"
           app:cardBackgroundColor="#57CBAB">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center"
               android:orientation="vertical">

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_profile"/>



           </LinearLayout>

       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:id="@+id/connections_card_view"
           app:cardCornerRadius="12dp"
           android:layout_width="110dp"
           android:layout_height="110dp"
           app:cardBackgroundColor="#EC7575">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center">

               <ImageView
                   android:tint="@android:color/white"
               android:src="@drawable/ic_social_main"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

           </LinearLayout>

       </androidx.cardview.widget.CardView>

   </LinearLayout>

        <LinearLayout
            android:layout_marginTop="32dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/find_card_view"
                app:cardCornerRadius="12dp"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginRight="45dp"
                app:cardBackgroundColor="#EC9D75">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

            <ImageView
                android:src="@drawable/ic_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/log_out_card_view"
                app:cardCornerRadius="12dp"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:cardBackgroundColor="#7D75EC">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:src="@drawable/ic_log_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15">


    </LinearLayout>

</LinearLayout>